      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "description": {
      "type": "text",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "link": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "type": {
      "type": "enumeration",
      "required": false,
      "enum": [
        "introCourse",
        "advancedTraining",
        "tutorial"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "targetGroup": {
      "type": "component",
