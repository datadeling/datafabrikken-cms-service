{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "name": "Course",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
